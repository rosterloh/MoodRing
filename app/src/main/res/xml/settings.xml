<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBoxPreference
        android:title="@string/pref_bt_autoconnect_label"
        android:key="@string/pref_bt_autoconnect_key"
        android:summaryOff="@string/pref_bt_autoconnect_false"
        android:summaryOn="@string/pref_bt_autoconnect_true"
        android:defaultValue="@string/pref_bt_autoconnect_default" />

    <EditTextPreference
        android:title="@string/pref_bt_address_label"
        android:key="@string/pref_bt_address_key"
        android:defaultValue="@string/pref_bt_address_default"
        android:inputType="text"
        android:singleLine="true" />
