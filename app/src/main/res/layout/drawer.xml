<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/drawer_width"
    android:layout_height="match_parent"
    android:background="@color/darkGray"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingTop="@dimen/drawer_padding_top">
    <!--
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/logo_horiz" />
    -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/plugin_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/drawer_plugins"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/list_divider" />

            <TextView
                android:id="@+id/link_settings"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeightSmall"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/item_background_light"
                android:text="@string/drawer_plugin_settings"
                android:drawablePadding="12dp"
                android:drawableStart="@drawable/ic_drawer"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearance" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>